{
  "name": "npm-build-tool",
  "version": "1.0.0",
  "description": "project demonstrating npm as a build tool",
  "main": "app.js",
  "scripts": {
    "start": "parallelshell \"npm run watch\" \"npm run js:watch\"",
    "prestart": "npm run clean && npm run sass && npm run modernizr && npm run icons && npm run copy",
    "compile": "babel-node tasks/compile-hbs.js && npm run sass && npm run icons && npm run js:prod",
    "postcompile": "npm run copy",
    "clean": "rimraf dist/*",
    "watch": "babel-node tasks/watch.js",
    "sass": "node-sass src/scss/ -o dist/css",
    "postsass": "postcss --use autoprefixer --use pixrem -c postcss.config.json dist/css/*.css -d dist/css",
    "icons": "babel-node tasks/icons.js",
    "js": "webpack -d --progress --colors",
    "js:watch": "webpack -d --progress --colors --watch",
    "js:prod": "webpack -p --progress --colors && npm run modernizr",
    "modernizr": "babel-node tasks/build-modernizr.js",
    "copy": "ncp src/public dist --stopOnErr",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "author": "Sparkbox",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^6.0.3",
    "babel": "^5.8.23",
    "babel-core": "^5.8.24",
    "exit-hook": "^1.1.1",
    "express": "^4.13.3",
    "front-matter": "^1.0.0",
    "fs-extra": "^0.24.0",
    "globby": "^3.0.1",
    "grunticon-lib": "^1.0.3",
    "handlebars": "^4.0.2",
    "lodash": "^3.10.1",
    "modernizr": "^3.0.0",
    "ncp": "^2.0.0",
    "node-sass": "^3.3.2",
    "path": "^0.11.14",
    "pixrem": "^2.0.1",
    "postcss-cli": "^2.1.1",
    "require-dir": "^0.3.0",
    "rimraf": "^2.4.3",
    "script-loader": "^0.6.1",
    "shelljs": "^0.5.3",
    "webpack": "^1.12.1",
    "yamljs": "^0.2.3"
  },
  "devDependencies": {
    "babel-core": "^5.8.24",
    "babel-loader": "^5.3.2",
    "connect-livereload": "^0.5.3",
    "nodemon": "^1.4.1",
    "parallelshell": "^2.0.0",
    "tiny-lr": "^0.1.6",
    "watch": "^0.16.0"
  }
}
